<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script type="text/javascript" src='/Chart.bundle.js'></script>
  <title>Document</title>
</head>

  <body>
    <button type="button" onclick="loadChart()">Load Chart</button>
    <canvas id="bar-chart-total" width="10" height="4"></canvas>
    <canvas id="bar-chart-avg" width="10" height="4"></canvas>

    <script>
      function loadChart() {
        new Chart(document.getElementById('bar-chart-total'), {
            type: 'bar',
            data: {  
              labels: ['2008', '2009', '2010'],
              datasets: [
                {
                  label: ["grand total claims"],
                  backgroundColor: "rgba(60,186,159,0.2)",
                  borderColor: "rgba(60,186,159,1)",
                  data: [ {{yearTotal2008}}, {{yearTotal2009}}, {{yearTotal2010}} ]
                }
              ]
            },
            options: {
              scales: {
                yAxes: [{
                  ticks:{ 
                    min: 0
                  }
                }]
              }
            }
          })

          new Chart(document.getElementById('bar-chart-avg'), {
            type: 'bar',
            data: {  
              labels: ['2008', '2009', '2010'],
              datasets: [
                {
                  label: ["average total claims per patient"],
                  backgroundColor: "rgba(255,221,50,0.2)",
                  borderColor: "rgba(255,221,50,1)",
                  data: [ {{yearAvg2008ByPatient}}, 
                          {{yearAvg2009ByPatient}}, 
                          {{yearAvg2010ByPatient}} 
                        ]
                }
              ]
            },
            options: {
              scales: {
                yAxes: [{
                  ticks:{ 
                    min: 0
                  }
                }]
              }
            }
          })
        }
        
      // document.getElementById('someShit').innerHTML = someShit
    </script>
  </body>

</html>